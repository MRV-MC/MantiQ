generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id         Int      @id @default(autoincrement())
  eventTitle String
  eventDesc  String?
  eventImage String?
  lastName   String
  firstName  String
  middleName String?
  phone      String
  status     String   @default("pending")
  createdAt  DateTime @default(now())

  payments   Payment[]
}

model Payment {
  id              Int       @id @default(autoincrement())
  booking         Booking   @relation(fields: [bookingId], references: [id])
  bookingId       Int
  amount          Decimal
  currency        String    @default("RUB")
  status          String    @default("pending")
  providerId      String?
  confirmationUrl String?
  paidAt          DateTime?
  createdAt       DateTime  @default(now())
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  dateMeta    String
  description String
  amount      Int      @default(0)
  image       String?
  details     String?
  tags        String?
  createdAt   DateTime @default(now())
}

model HeroContent {
  id    Int    @id @default(1)
  image String?
}

model AboutContent {
  id        Int    @id @default(1)
  highlight String?
  body1     String?
  body2     String?
  body3     String?
  image1    String?
  image2    String?
  image3    String?
  image4    String?
}
